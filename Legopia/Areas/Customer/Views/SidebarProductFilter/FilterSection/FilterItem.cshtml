@model FilterItemModel

<div class="form-check">
    <input class="form-check-input" type="checkbox" id="@Model.Label" name="filters" value="@Model.Label" @(Model.Selected ? "checked" : "")>
    <label class="form-check-label" for="@Model.Label">
        @Model.Label <span class="text-muted">@Model.Count</span>
    </label>
</div>

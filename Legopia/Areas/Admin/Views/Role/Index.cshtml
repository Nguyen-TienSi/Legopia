@model IEnumerable<Legopia.Models.Identity.UserRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<a asp-action="Create" class="btn btn-success mb-3">Create New Role</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.Description</td>
            </tr>
        }
    </tbody>
</table>

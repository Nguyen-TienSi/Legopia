<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Legopia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Legopia.styles.css" asp-append-version="true" />
    <style>
        [type="search"]::-webkit-search-cancel-button,
        [type="search"]::-webkit-search-decoration {
            -webkit-appearance: none;
            appearance: none;
        }
    </style>
</head>
<body>
    @using Legopia.Areas.Admin.Models
    @{
        var sidebarItems = new List<SidebarItemModel>
        {
            new SidebarItemModel { Title = "Dashboard", Icon = "bi bi-house-door", Url = "/Admin" },
            new SidebarItemModel
            {
                Title = "Users", Icon = "bi bi-people",
                SubItems = new List<SidebarItemModel>
                {
                    new SidebarItemModel { Title = "All Users", Url = "/Admin/Users" },
                    new SidebarItemModel { Title = "Roles", Url = "/Admin/Roles" }
                }
            },
            new SidebarItemModel { Title = "Products", Icon = "bi bi-box-seam", Url = "/Admin/Products" },
            new SidebarItemModel { Title = "Orders", Icon = "bi bi-receipt", Url = "/Admin/Orders" },
            new SidebarItemModel { Title = "Posts", Icon = "bi bi-file-earmark-text", Url = "/Admin/Posts" },
            new SidebarItemModel
            {
                Title = "Settings", Icon = "bi bi-gear",
                SubItems = new List<SidebarItemModel>
                {
                    new SidebarItemModel { Title = "Site Settings", Url = "/Admin/Site" },
                    new SidebarItemModel { Title = "Logs", Url = "/Admin/Logs" }
                }
            }
        };
    }
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto px-0">
                <partial name="_Sidebar" model="sidebarItems" />
            </div>
            <div class="col py-3">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
